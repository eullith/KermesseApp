@model IEnumerable<KermesseApp.Models.tbl_cat_producto>

@{
    ViewBag.Title = "tbl_catProducto";
}

@using (Html.BeginForm("FiltrarCatProd", "Tbl_cat_producto", FormMethod.Post))
{
    <h2 style="padding-bottom:2rem;">Categoría del Producto</h2>

    <div class="row justify-content-md-end" style="padding-bottom: 1rem;">
        <div class="col-md-auto" style="padding-right:12rem;">
            <p>
                <a href="@Url.Action("VwGuardarCatProd")"
                   class="btn btn-primary">
                    <ion-icon name="add-outline"></ion-icon>
                    <span>
                        <strong>Añadir Nuevo</strong>
                    </span>
                </a>
            </p>
        </div>
        <div class="col">
            <div class="input-group">
                @Html.TextBox("cadena", null, new { @class = "form-control col-sm-10", @placeholder = "Buscar", @name = "search-outline" })
                <div class="input-group-append">
                    <button type="submit" class="btn btn-success">
                        <i data-feather="search"></i>Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                @*<th>
                          @Html.DisplayNameFor(model => model.estado)
                    </th>*@
                <th>
                    @Html.Label("Acciones")
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-wrap" style="width: 20rem;">
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td class="text-wrap" style="width: 40rem;">
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>*@
                <td>
                    <a href="@Url.Action("EditarCatProd", new { id = item.id_cat_producto })"><ion-icon name="create-outline" style=" font-size: 20px; pointer-events:none;"></ion-icon></a>
                    <a href="@Url.Action("VerCatProd", new { id = item.id_cat_producto })"><ion-icon name="document-text-outline" style=" font-size: 20px; pointer-events: none;"></ion-icon></a>
                    <a href="@Url.Action("EliminarCatProd", new { id = item.id_cat_producto })"><ion-icon name="trash-outline" style=" font-size: 20px; pointer-events: none;"></ion-icon></a>
                </td>
            </tr>
        }
    </table>
}
