@model KermesseApp.Models.tbl_productos

@{
    ViewBag.Title = "EditarProd";
}

@using (Html.BeginForm("ActualizarProducto", "Tbl_productos", FormMethod.Post))
{

    <style>
        .mydropdownlist {
            color: #3c3d3d;
            font-size: 14px;
            padding: 7px 12px;
            border: 1px solid #CED4DA;
            border-radius: 4px;
            background-color: #FFFFFF;
            width: 100%;
            height: 2.875rem;
            font-weight: 400;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
    </style>

    <div class="col-12 grid-margin stretch-card">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="https://as1.ftcdn.net/v2/jpg/00/41/40/38/1000_F_41403871_XgEFR2CYL5JdEPK47HcgaOTRduKImzV9.jpg" class="card-img-top" />
                </div>
                <div class="col-md-8">
                    <div class="card-body ">
                        <div class="card-title">
                            <h3 style="padding-top: 1rem;">Editar producto</h3>
                        </div>
                        <div class="card-description" style="padding-bottom: 1rem;">
                            Llene el siguiente formulario para editar este producto.
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col">
                                <div class="form-group row">
                                    <div class="col-sm-9" style="margin-top:0.5rem;">
                                        <div><label>Comunidad</label></div>
                                        @Html.DropDownListFor(model => model.id_comunidad, null, htmlAttributes: new { @class = "mydropdownlist" })
                                        @Html.ValidationMessageFor(model => model.id_comunidad, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group row">
                                    <div class="col-sm-9" style="margin-top:0.5rem;">
                                        <div><label>Categoría</label></div>
                                        @Html.DropDownListFor(model => model.id_cat_producto, null, htmlAttributes: new { @class = "mydropdownlist" })
                                        @Html.ValidationMessageFor(model => model.id_cat_producto, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="col-sm-9" style="margin-top:0.5rem;">
                                        <div><label>Nombre</label></div>
                                        @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.nombre, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="col-sm-9" style="margin-top:0.5rem;">
                                        <div><label>Descripción</label></div>
                                        @Html.TextAreaFor(x => x.desc_presentacion, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.desc_presentacion, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="col-sm-9" style="padding-top:0.5rem;">
                                        <div><label>Cantidad</label></div>
                                        @Html.TextBoxFor(x => x.cantidad, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.cantidad, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="col-sm-9" style="padding-top:0.5rem;">
                                        <div><label>Precio</label></div>
                                        @Html.TextBoxFor(x => x.precio_venta, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.precio_venta, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top:2rem;">
                            <div class="col">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-block btn-rounded btn-success">Guardar</button>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <button type="reset" class="btn btn-block btn-rounded btn-danger">Cancelar</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-rounded btn-block btn-inverse-info" href="@Url.Action("tbl_Productos")"> Regresar </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

