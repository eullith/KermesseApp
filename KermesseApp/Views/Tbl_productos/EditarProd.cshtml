@model KermesseApp.Models.tbl_productos

@{
    ViewBag.Title = "EditarProd";
}

<h2>Editar Producto</h2>

@using (Html.BeginForm("ActualizarProd", "Tbl_productos", FormMethod.Post))
{

    <div class="form-horizontal">
        <h4>Productos</h4>
        <hr>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_producto)

        <div class="form-group">
            <label>Comunidad</label>
            @Html.DropDownList("id_comunidad", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_comunidad, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Categoría</label>
            @Html.DropDownList("id_cat_producto", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_cat_producto, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Nombre</label>
            @Html.TextBoxFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Descripción</label>
            @Html.TextAreaFor(model => model.desc_presentacion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.desc_presentacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Cantidad</label>
        @Html.TextBoxFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Precio</label>
        @Html.TextBoxFor(model => model.precio_venta, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.precio_venta, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="reset" class="btn btn-danger">Cancelar</button>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "tbl_Productos")
</div>
